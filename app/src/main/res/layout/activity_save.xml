<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".save"
    android:background="@color/back">


    <TextView
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:text="บันทึกดัชนีมวลกาย"
        android:textSize="36dp" />

    <ImageView
        android:id="@+id/formLogo"
        android:layout_width="377dp"
        android:layout_height="94dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="            น้ำหนัก         "
            android:background="@drawable/border_text"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="            ส่วนสูง           "
            android:textSize="25sp"
            android:background="@drawable/border_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_save"
        android:layout_width="match_parent"
        android:layout_height="204dp"></android.support.v7.widget.RecyclerView>

    <ImageButton
        android:id="@+id/imageButton_save"
        android:layout_width="73dp"
        android:layout_height="71dp"
        android:layout_gravity="end"
        android:src="@drawable/at" />

</LinearLayout>