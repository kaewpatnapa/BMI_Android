<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4296AC"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".bmi">

    <ImageView
        android:layout_width="237dp"
        android:layout_height="249dp"
        android:src="@drawable/ag" />
   <LinearLayout
       android:gravity="center"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="111dp"
           android:layout_height="wrap_content"
           android:text="น้ำหนัก"
           android:textSize="32dp" />
       <EditText
           android:id="@+id/editText3_w"
           android:layout_width="106dp"
           android:layout_height="wrap_content"
           android:ems="10"
           android:inputType="textPersonName"
           android:text="0" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="กิโลกรัม"
           android:textSize="32dp" />
   </LinearLayout>

   <LinearLayout
       android:gravity="center"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="103dp"
           android:layout_height="wrap_content"
           android:text="ส่วนสูง"
           android:textSize="32dp" />
       <EditText
           android:id="@+id/editText4_h"
           android:layout_width="107dp"
           android:layout_height="wrap_content"
           android:ems="10"
           android:inputType="textPersonName"
           android:text="0" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="เซนติเมตร"
           android:textSize="32dp" />
   </LinearLayout>
    <Button
        android:id="@+id/Button_cal"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="คำนวน"
        android:layout_marginTop="20dp"
        android:textSize="32dp" />

    <ImageView
        android:layout_width="131dp"
        android:layout_height="97dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/af" />

</LinearLayout>